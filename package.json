{
  "name": "quran-app",
  "version": "1.0.6",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn generate generate && nuxt build",
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 nuxt dev --port 3000 --host",
    "generate": "NODE_OPTIONS='--max_old_space_size=4096' nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prettier": "prettier --write .",
    "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS='--max-http-header-size=16384' nuxt start"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.0.8",
    "@nuxtjs/color-mode": "^3.3.3",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@pinia/nuxt": "^0.5.1",
    "@types/node": "^20.11.30",
    "@vite-pwa/nuxt": "^0.6.0",
    "nuxt": "^3.11.1",
    "nuxt-og-image": "^3.0.0-rc.53",
    "nuxt-vercel-analytics": "^1.0.2",
    "postcss-import": "^16.1.0",
    "sass": "^1.72.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "dependencies": {
    "@nuxt/ui": "^2.14.2",
    "@vueuse/nuxt": "^10.9.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "nuxt-icon": "^0.6.9",
    "postcss": "^8.4.37",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  }
}
